	.tablet
		margin-bottom 130px
		&__title
			font-weight: 700;
			font-size: 45px;
			line-height: 55px;
			text-align: center;
			color: #FFFFFF;
			margin-bottom 40px
			&-span
				color: #9D9DAC
		&__wrapper
			display flex
			justify-content: space-between
			counter-reset tablet
		&__pic
			max-width: 570px
		&__pic-2
			max-width: 315px
			display none
		&__item
			font-weight: 700;
			font-size: 20px;
			line-height: 30px;
			color: #FFFFFF;
			position relative
			counter-increment: tablet
			cursor: pointer
			transition: $default-transition
			&:not(:last-child)
				margin-bottom 35px
		&__middle
			position relative
		&__left
			display flex
			flex-direction: column
			align-items: flex-end
			padding-top 30px
			max-width: 230px
			.tablet__item
				padding-right 28px
				text-align right
				&:hover
					color: #319BE2
				&:hover:after
					color: #319BE2
				&:after
					content ""counter(tablet)
					font-weight: 500;
					font-size: 18px;
					line-height: 25px;
					color: #ffffff80;
					position absolute
					right: 0
					top: 3px
					transition: $default-transition
		&__right
			display flex
			flex-direction: column
			align-items: flex-start
			padding-top 30px
			.tablet__item
				padding-left 28px
				&:hover
					color: #319BE2
				&:hover:after
					color: #319BE2
				&:after
					content ""counter(tablet)
					font-weight: 500;
					font-size: 18px;
					line-height: 25px;
					color: #ffffff80;
					position absolute
					left: 0
					top: 3px
					transition: $default-transition
		&__block
			position absolute
			&-hidden
				position absolute
				width: 286px
				padding: 30px 30px 30px 25px
				background: #294089
				border-radius: 5px
				transform: translateX(-45%)
				transition: $default-transition
				opacity 0
				&:before
					content: ""
					position absolute
					width: 0px
					height: 0px
					background: transparent
					border-left: 20px solid transparent;
					border-right: 20px solid transparent;
					border-bottom: 20px solid #294089;
					top: -20px
					left: 50%
					transform: translateX(-50%)
				&-title
					margin-bottom 10px
					font-weight: 700;
					font-size: 15px;
					line-height: 20px;
					color: #FFFFFF;
				&-desc
					font-weight: 400;
					font-size: 15px;
					line-height: 20px;
					color: #C6C6D1;
			&-num
				font-weight: 400;
				font-size: 12px;
				line-height: 20px;
				color: #FFFFFF;
				position relative
				z-index 3
				cursor pointer
				display flex
				align-items: center
				justify-content: center
				width: 24px
				height: 24px
				border-radius: 50px
				background: #319BE2
				margin-bottom 35px
				&:hover:before
					animation-play-state: paused
				&:hover + .tablet__block-hidden
					opacity 1
					z-index 5
				&:before
					content: "";
					position: absolute;
					width: 24px;
					height: 24px;
					border-radius: 50%;
					top: calc(50% - 12px);
					left: calc(50% - 12px);
					background: rgba(49, 155, 226, .5);
					z-index: -1;
					-webkit-animation: .5s show 0s infinite alternate;
					animation: .5s show 0s infinite alternate;
			&-1
				top 13%
				left: 56%
			&-2
				top 19%
				left: 56%
			&-3
				top 4%
				left: 73%
			&-4
				top 25%
				left: 56%
			&-5
				top 35%
				left: 59%
			&-6
				top 55%
				left: 56%
			&-7
				top 55%
				left: 2%
			&-8
				top 9%
				left: 12%
			&-9
				top 31%
				left: 2%
			&-10
				top 49.5%
				left: 28%
			&-11
				top 76%
				left: 2%
			
					

	.active
