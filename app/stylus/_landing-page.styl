//main styles
.main-wrapper
	padding 0 0 0 0
	min-width $min-width
	width 100%
	position relative
	overflow hidden
	min-height 100%
	display flex
	flex-direction column
	justify-content flex-start	

.wrapper
	min-width $min-width
	max-width $max-width
	padding 0 40px 0 40px
	margin 0 auto
	position relative

.landing-page .header .wrapper
	justify-content: space-between

/* titles */
p
	font($base-font-size, $base-line-height, $text-color, $custom-font-family, 400)
h1
	font($font-size-h1, $line-height-h1, $title-color, $custom-font-family, 700)

h2
	font($font-size-h2, $line-height-h2, $title-color, $custom-font-family, 700)

h3
	font($font-size-h3, $line-height-h3, $title-color, $custom-font-family, 700)

/* styles */
.main
	min-width $min-width
	width 100%
	order 2
	flex-grow 1

.ui.dimmer
	z-index: 1000 !important


.landing-page
	.header
		position: static
		order: 0
		margin-bottom 103px
		&__wrapper
			padding-top: 32px
			display flex
			align-items: center
		&__logo
			margin-right 95px
			max-width 90px
		&__nav
			margin-right: auto
			&-buttons
				display none
		&__list
			display flex
			justify-content: space-between
			align-items: center
			&-item:not(:last-child)
				margin-right 40px
			&-link
				font-weight: 500;
				font-size: 15px;
				line-height: 25px;
				color: #ffffff80;
				transition: $default-transition
				&:hover
					color: #fff
		&__buttons
			display flex
			justify-content: space-between
			align-items: center
		&__log-in
			font-weight: 500;
			font-size: 15px;
			line-height: 25px;
			color: #FFFFFF;
			transition: $default-transition
			margin-right:  30px
			&:hover
				color: #ffffff80
		&__create-account
			font-weight: 500;
			font-size: 15px;
			line-height: 25px;
			display block
			width: 196px
			padding: 10px 0
			border: 2px solid #319BE2;
			border-radius: 5px;
			color: #319BE2
			transition: $default-transition
			text-transform uppercase
			text-align center
			&:hover
				color: #166498;
				border-color: #166498;
		&__menu
			width: 30px
			height: 30px
			padding: 0
			background: none
			display none
			transition: $default-transition
			&-item
				display inline-block
				height: 2px
				width: 30px
				background #fff
				position relative
				transition: $default-transition
				&:before
					content: ""
					height: 2px
					width: 100%
					position absolute
					top: 10px
					display block
					background: #fff
					transition: $default-transition
				&:after
					content: ""
					height: 2px
					width: 100%
					position absolute
					top: -10px
					display block
					background: #fff
					transition: $default-transition




