.index-slider
	padding-bottom 135px
	.wrapper
		max-width: 1250px
	.slick-initialized .slick-slide 
		margin-left: 30px;
		align-items: center;
		display: flex;
	.slick-prev
		left: -65px
		background: #1b255a
		border-radius: 40px;
		width: 40px
		height: 40px
		transition: $default-transition
		&:before
			content: ""
			width: 10px
			height: 16px
			background: url('../img/arrow-slider.svg')
			background-repeat: no-repeat
			display block
			position absolute
			top: 50%
			left: 50%
			transform: translate(-70%, -50%) scale(-1, 1)
		&:hover
			background: #1e316e
	.slick-next
		right: -65px
		background: #1b255a;
		border-radius: 40px;
		width: 40px
		height: 40px
		transition: $default-transition
		&:before
			content: ""
			width: 10px
			height: 16px
			background: url('../img/arrow-slider.svg')
			background-repeat: no-repeat
			display block
			position absolute
			top: 50%
			left: 50%
			transform: translate(-30%, -50%)
		&:hover
			background: #1e316e
	&__wrapper
		display flex
		justify-content: center
		gap: 30px
	&__item
		background: rgba(31, 32, 78, .8);
		mix-blend-mode: normal;
		border-radius: 5px;
		width: 170px
		padding: 15px 0 10px 0
		transition: $default-transition
		display flex
		flex-direction: column
		align-items: center
		height: 263px
		justify-content: flex-start
		&:hover
			background: #1e316e
		&-top
			display flex
			justify-content: space-between
			width: 130px
			margin-bottom 24px
		&-label
			font-weight: 500;
			font-size: 15px;
			line-height: 25px;
			color: $white
			span
				color: #A2A3B7;
				display block
		&-currency
			max-width: 35px
			transition: $default-transition
	&__pic
		width: 100%
		margin-bottom 24px
	&__bit
