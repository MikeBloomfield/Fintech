.home2
	padding-top 170px
	// overflow hidden
	.wrapper
		max-width 1100px
		display flex
		justify-content space-between
	&__left,
	&__right
		width calc(50% - 10px)
		max-width 470px
	&__left
		padding-top 30px
	&__table
		&-head
			margin-bottom 7px
			display flex
			align-items center
			justify-content space-between
			padding 0 25px
			.home2__table-td
				font-size 12px
				line-height 15px
				color #fff
				opacity 0.5
		&-body
			height 350px
			// overflow hidden
			&-wrap
				&.trans
					transition all 1s
		&-tr
			display flex
			justify-content space-between
			align-items center
			padding 12.5px 25px
			margin-bottom 10px
			background-color rgba(#1f204e, .8)
			border-radius 5px
			opacity 0
			pointer-events none
			&.last-visible
				transition all 1s
			&.visible
				opacity 1
				pointer-events initial
			&.hidden
				opacity 0
				transition all 1s
			&:last-of-type
				margin-bottom 0
			&.active
				background-color rgba(#4981f0, .5)
			.home2__table-td
				&:nth-child(1)
					display flex
					align-items center
					font-weight 500
					img
						margin-right 10px
				&:nth-child(4)
					font-weight 500
		&-td
			&:nth-child(1)
				width 155px
			&:nth-child(2)
				width 80px
			&:nth-child(3)
				width 135px
				text-align right
			&:nth-child(4)
				width 100px
				text-align right
	&__icons
		display flex
		align-items center
		margin-bottom 40px
		img
			width 44px
			margin-left -9px
			&:first-child
				width 40px
				margin-left 0
		&-more
			width 44px
			height 44px
			border-radius 50%
			background-color $accent
			text-align center
			line-height 44px
			color #fff
			font-weight 500
			margin-left -9px
			border 2px solid $dark-blue
			padding-right 3px
		



