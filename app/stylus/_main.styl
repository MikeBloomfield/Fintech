.chartjs-tooltip
	background-color #fff
	color #131442
	width 220px
	padding 10px 20px 30px
	transform translate(-50%, calc(-100% - 25px))
	border-radius 10px
	box-shadow 5px 20px 40px rgba(0, 0, 0, 0.3)
	font-family $geometria
	z-index 99
	transition transform .15s
	&__arr
		content ''
		width 14px
		height 9px
		background-image url('../img/icons/tooltip-arr.svg')
		background-repeat no-repeat
		background-size contain
		position absolute
		bottom -9px
		left calc(50% - 7px)
	&.bottom
		transform translate(-50%, 30px)
		.chartjs-tooltip__arr
			bottom auto
			top -9px
			transform rotate(180deg)
	&__head
		display flex
		align-items center
		justify-content space-between
		margin-bottom 5px
		flex-wrap wrap
		h2
