/*==========  Desktop First  ==========*/

@media (max-width : 1200px)
	.home4__card.active
		transform translateX(50px)
	.footer__col4
		min-width 280px
	.footer
		&__col1
			ul
				max-height: 1000px
		&__col2
			ul
				max-height: 1000px
				li
					width: 195px



@media (max-width : 992px)
	.header__right
		.header__signup, .header__login
			display none
	.header__menu
		.header__signup, .header__login
			display block
		.header__login
			margin-right 0
			margin-top 20px
			opacity: 1
		.header__signup
			margin-top 20px
			border-radius: 5px;
			border: 2px solid #319be2;
			color: #319be2;
			font-weight: 500;
			-webkit-transition: all 0.2s ease-out;
			transition: all 0.2s ease-out;
			display flex
			align-items: center
			padding: 0 20px
	.header__hamb
		display block
		width 35px
		height 24px
		cursor pointer
		margin-left 30px
		position relative
		&:before,
		&:after,
		span
			content ''
			display block
			width 100%
			height 3px
			border-radius 2px
			background-color #fff
			position absolute
		&:before
			top 0
		&:after
			bottom 0
		span
			top calc(50% - 1.5px)
	
	.header__right
		margin-left auto

	.header__menu
		position fixed
		width 100vw
		height 100vh
		top 0
		left 0
		z-index 9
		background-color #1d1f5a
		padding 40px
		text-align center
		flex-direction column
		justify-content center
		transition all .5s
		transform translateY(-110%)
		overflow auto
		&.active
			transform translateY(0)
		li,
		& li:last-of-type
			margin 20px auto
		a
			font-size 24px

	.header__menu-close
		display block
		position absolute
		right 15px
		top 30px
		width 30px
		height 30px
		cursor pointer
		&:before,
		&:after
			content ''
			width 100%
			height 3px
			background-color #fff
			border-radius 2px
			position absolute
			left 0
			top 50%
		&:before
			transform rotate(-45deg)
		&:after
			transform rotate(45deg)

	.home2
		padding-top 50px

	.home2 .wrapper,
	.home3 .wrapper,
	.home4 .wrapper
		flex-wrap wrap

	.home2__left,
	.home2__right,
	.home3__left,
	.home4__left,
	.home4__right
		margin auto
		width 470px
		max-width 100%
	.home2__left,
	.home3__left,
	.home4__left
		margin-bottom 50px

	.home3__right
		width 670px
		max-width 100%
		margin auto



