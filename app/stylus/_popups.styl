.ui.modal>.close
  top 15px
  right 15px
  display flex
  justify-content center
  align-items center
  img
    max-width 12px

.popup
  &__block
    &.ui.modal
      background: #24265A;
      box-shadow: 0px 10px 30px rgba(0, 0, 0, 0.4);
      border-radius: 10px;
      max-width 570px
      padding 50px 0 50px
    .ui.tabular.menu
      margin 15px 0 0 0
      border 1px solid $blue
      border-radius 5px !important
      .item
        width 50%
        border none
        justify-content center
        font-weight: 500;
        font-size: 15px;
        line-height: 25px;
        color $gray
        background transparent
        border-radius 5px !important
        padding 12px 10px 13px
        &.active
          background $blue
          color $white
        &:hover
          color $white
    .ui.attached.segment
      background transparent
      border none
      border-radius none
      padding 20px 0 0 0
  &__wrapper
    max-width 500px
    width 100%
    padding 0 15px
    margin 0 auto
  &__title
    h2
      font-weight 700
      font-size: 20px;
      line-height: 30px;
      color $white
      text-align center
  &__text
    margin-top 10px
    p
      font-size: 15px;
      line-height: 25px;
      color: $white;
      text-align center
  &__form
    &-bottom
      display flex
      justify-content space-between
      align-items center
      margin-top 28px
      .popup__link
        margin-left 5px
        a
          color $blue
          position relative
          margin-left 3px
          font-weight 700
          &:hover
            color $white
  &__input
    &-description
      margin-top 5px
      text-align right
      a
        color $blue
        font-weight: 500;
        position relative
        &:hover
          color $white

  &__newAccount
    .popup
      &__btn
        width 100%
        max-width 225px
  &__signIn
    .popup
      &__btn
        width 100%
        max-width 175px





.ui.modal.popup__tools
  width 100%
  padding 50px 50px 45px 50px
  color #fff
  .title
    h2
      font-size: 20px;
      line-height: 30px;
      color: #fff;
    &.center
      text-align center
  .top
    display flex
    justify-content space-between
    align-items center
    margin-bottom 5px
    .unverified
      text-align: center;
      background: rgba(239, 168, 9, 0.3);
      border-radius: 3px;
      color: #EFA809;
      padding: 5px 0;
      width: 85px;
      text-transform: uppercase;
      font-size: 9px;
      line-height: 15px;
  .popup__tools
    &-field
      display flex
      justify-content space-between
      align-items flex-start
      padding 10px 0 15px
      border-bottom 1px solid rgba(#fff, .2)
      flex-wrap wrap
      &.column
        flex-direction column
        padding 10px 0 0px
        .popup__tools-label
          padding-bottom 5px
      &.noborder
        border-bottom none
        padding 10px 0 5px

    &-label
      font-size: 15px;
      line-height: 25px;
      color: #fff;
      a
        font-size: 15px;
        line-height: 25px;
        color: #309BE2;
        font-weight bold

    &-info
      text-align right
      .unverified
        text-align: center;
        background: rgba(239, 168, 9, 0.3);
        border-radius: 3px;
        color: #EFA809;
        padding: 5px 0;
        width: 85px;
        text-transform: uppercase;
        font-size: 9px;
        line-height: 15px;
      .text
        display inline-block
        font-size: 15px;
        line-height: 25px;
        color: #fff;
        font-weight bold
        margin-bottom 5px
        .gray
          color #8D8DA3
      &.copy-block
        display flex
        justify-content flex-end
        align-items center
        margin-top -5px
        input
          border none
          font-size: 15px;
          line-height: 30px;
          color: #fff;
          font-weight bold
          text-align right
          padding 0
          background: transparent;
          margin-right: 15px
    &-btn
      text-align center
      margin-top 30px
    &-step
      display flex
      justify-content flex-start
      min-height 60px
      padding-bottom 5px
      .done
        visibility: hidden;
      &-title
        font-size: 15px;
        line-height: 25px;
        color: #fff;
        font-weight 500
      &-date
        font-size: 12px;
        line-height: 25px;
        color: #fff;
        margin-top 4px
      &-info
        margin-left 20px
      &-icon
        .icon
          position relative
          display flex
          justify-content center
          align-items center
          &:after
            content ""
            position absolute
            height 40px
            width 1px
            background rgba(#6E7073, .3)
            left 10px
            top 100%
      &:last-child
        min-height 0
        .icon:after
          display none
      &.active
        .done
          visibility: visible;
        .icon
          .round
            display none
          .round-main
            stroke #06D49C
            fill #06D49C
          &:after
            background #06D49C
  .ui.accordion
    width 100%
    .title:not(.ui)
      padding 0
    .title
      display flex
      justify-content space-between
      .icon-arrow
        transform rotate(-90deg)
        display flex
        justify-content center
        align-items center
      &.active
        .icon-arrow
          transform rotate(90deg)
    p
      font-size: 12px;
      line-height: 15px;
      color: #fff;
      a
        font-size: 12px;
        line-height: 25px;
        color: #309BE2;
        font-weight bold

  &.popup__details
    .title
      margin-bottom 5px
    .tools__button
      margin 30px auto 0
      max-width 320px
      a
        padding 8px 10px
        min-height: 50px
        font-size: 15px


.ui.dimmer
  background-color rgba(27, 28, 72,.85)




// MEDIA========================================

@media (max-width : 798px)
  .ui.modal.popup__tools
    padding 50px 15px 30px




@media (max-width : 480px)
  .popup
    &__block
      &.ui.modal
        padding-bottom 30px

    &__input
      &-description
        a
          font-size: 13px;
          line-height: 25px;
    &__form-bottom
      margin-top 15px
      flex-direction column
      .popup__link
        margin-top 7px
    &__text p
      font-size: 13px;
      line-height: 25px;
  .ui.modal.popup__tools
    .popup__tools-field
      flex-direction column
    .popup__tools-info
      text-align left
      margin-top 5px
      &.copy-block
        justify-content space-between
        width 100%
        input
          text-align left





@media (max-width : 374px)

  .popup__block
    .ui.tabular.menu .item
      font-size 13px
      padding 5px

    
