.footer
	width 100%
	min-width $min-width
	order 3
	&__copy
		padding 25px 0
		color rgba(#319BE2, .7)
		line-height 25px
	&__wrap.wrapper
		display flex
		justify-content space-between
		border-top 1px solid rgba(#fff, .1)
		padding-top 30px
	&__col4
		min-width 270px
	&__ttl
		margin-bottom 15px
		font-size 20px
		line-height 1.5
	ul
		li
			a
				font-size 15px
				line-height 25px
				color rgba(#fff, .5)
				&:hover
					color #fff
	&__socs
		display flex
		flex-wrap wrap
		align-items center
		a
			width 40px
			height 40px
			border-radius 50%
			display inline-flex
			align-items center
			justify-content center
			border 1px solid $accent
			&:hover
				opacity 0.7
			&:not(:last-child)
				margin-right 15px
	&__col1
		ul
			max-height: 145px
			display flex
			flex-direction: column
			flex-wrap: wrap
			gap: 5px 40px;
			max-width: 356px
	&__col2
		ul
			max-height: 175px
			display flex
			flex-direction: column
			flex-wrap: wrap
			gap: 5px 5px
			align-items: left
			li
				width: 195px