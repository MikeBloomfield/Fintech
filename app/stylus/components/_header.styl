






.header
	width 100%
	min-width $min-width
	order 1
	padding 27px 0
	position absolute
	z-index 9
	.wrapper
		display flex
		align-items center
	.logo
		max-width: 150px
		margin-right: 50px
		margin-top -9px
		position: relative
		cursor pointer
		&-inner
			position: absolute
			top: 17%
			left: 4%
			-webkit-transform: rotate(0deg);
			transform: rotate(0deg);
			transition: .3s
			transition-timing-function: ease-out
		&:hover .logo-inner
			-webkit-transform: rotate(405deg);
			transform: rotate(405deg);
			transition: .8s
			transition-timing-function: ease
	&__menu
		display flex
		align-items center
		flex-wrap wrap
		padding-right 20px
		margin-right auto
		li
			margin-right 40px
			&:last-of-type
				margin-right 0
			&.active
				a
					opacity 1
		.header__signup, .header__login
			display none
		a
			font-size 15px
			line-height 25px
			display block
			font-weight 500
			color #fff
			opacity 0.5
			&:hover
				opacity 1
	&__right
		display flex
		align-items center
	&__langs
		margin-right 30px
		position relative
		&.active
			.header__langs-drop
				transform translateY(0)
				opacity 1
				visibility visible
			.header__langs-arr
				transform rotate(180deg)
		&-top
			cursor pointer
			display flex
			align-items center
		&-flag
			width 24px
			height 24px
			margin-right 6px
		&-arr
			width 8px
			height 5px
			background-image url('../img/icons/arr-down.svg')
			background-size contain
			background-position center
			background-repeat no-repeat
			transition all .2s
		&-drop
			position absolute
			top 40px
			z-index 3
			width 100%
			padding 5px
			border-radius 5px
			background-color #fff
			transform translateY(30px)
			opacity 0
			visibility visible
			transition all .2s
			a
				margin-bottom 8px
				display block
				text-align center
				&:last-child
					margin-bottom 0
			img
				width 24px
				display inline-block
	&__login
		margin-right 30px
		font-weight 500
		&:hover
			opacity 0.5
