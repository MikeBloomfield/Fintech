      flex-direction column
      align-items flex-start
      margin-bottom 20px
    
    .send__info
      flex-direction column 
      &-img 
        margin 0 auto
      &-items 
        max-width none
      &-item 
        &-copy 
          max-width 45px 
          a
            img 
              margin-right 0
            .text 
              display none
    .send__select 
      .ui.dropdown 
        padding 10px 10px 10px 20px
        .item
          flex-direction column 
          align-items flex-start
          .balance 
            text-align left
            width 100%
          .info 
            width 100%
            margin-bottom 10px
            border: none;
    .invoice__text
      font-size 13px 
      line-height 15px
    
    .payment
      &__items
        flex-direction column
        &:last-child 
          .payment__item:first-of-type 
            margin-bottom 10px
      &__item
        margin-bottom 10px
        &:last-of-type
          text-align left
          margin-bottom 20px