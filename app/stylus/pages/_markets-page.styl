.page__markets
    overflow hidden

    .markets 
        padding 0px 0 60px
        &__main 
            padding 17px 0 9px
        .table
            width 100%
            border-spacing: 0
        .tr 
            border-bottom: 1px solid rgba($white, .2)
        .td
            font-family $base-font-family
            text-transform uppercase
            min-height 55px 
            padding-right 10px
            &[data-label = "Pair"] 
                position relative
                color $white
                display flex
                justify-content flex-start
                align-items center
                .pair
                    &__btn
                        width 30px 
                        height 30px 
                        border-radius 50%
                        margin-right 10px
                        display flex
                        justify-content center
                        align-items center
                        cursor pointer
                        path 
                        
                            fill transparent
                            transition all .4s ease
                        &:hover 
                            path 
                                fill $blue
                        &.active 
                            path 
                                fill $blue

            &[data-label = "Last Price"],
            &[data-label = "Pair"]  
                font-weight 600
                span
                    position relative 
                    &:before 
                        content "/"
                        padding-right 3px
                        color $white

            &[data-label = "Last Price"] 
                color $white
                &.green,
                &.red 
                    span 
                        color $white
            &.green 
                color $green
            &.red 
                color $red
            &[data-label = "24h Change"] 
                font-weight 600
                span 
                    position relative 
                    display inline-block
                    padding-right 18px 
                    &:after 
                        content ""
                        position absolute 
                        background-size cover
                        width 13px 
                        height 13px 
                        right 0 
                &.green 
                    span 
                        &:after 
                            background-image url('../img/main/markets/arrow_up.svg')
                            top 5px
                &.red 
                    span 
                        &:after 
                            background-image url('../img/main/markets/arrow_down.svg')
                            top 4px
        .th,
        .td 
            &[data-label = "24h Volume"]     
                width 110px 
        .tbody 
            .td 
                min-height 64px 
        &__th  
            min-height 53px 
            display flex
            justify-content flex-start
            align-items center
            
        &__arrow 
            display flex
            cursor pointer 
            margin 1px 0
            &:hover 
                .markets__arrow-svg
                    fill $blue
            &-main 
                display flex
                flex-direction column 
                justify-content center
                margin-left 11px
                margin-bottom 3px
            .markets__arrow-svg
                fill $gray
                transition all .4s ease
            &-active
                .markets__arrow-svg
                    fill $blue
    
    .pagination 
        margin-top: -10px;
        position: relative;
        padding-top: 20px;

    

@media (max-width : 998px)

    
    .page__markets

        .markets 
            .td 
                span 
                    display block


@media (max-width : 798px)


    .page__markets
        .markets 
            padding 0px 0 40px
            .thead 
                display none
            .tbody
                display flex
                justify-content center
                flex-wrap wrap 
                .tr 
                    width 50%
                    height auto
                    position relative
                    padding 10px 5px 10px 0
                    &:nth-child(even)
                        padding-left 5px
                        padding-right 0
                        &:before 
                            content "" 
                            position absolute 
                            width 1px 
                            height 70% 
                            left 0 
                            top 50% 
                            transform translateY(-50%)
                            background rgba(110,112,115,0.1)
                        .td 
                            padding-right 0
                            padding-left 15px
                    .td 
                        padding-left 0
                    
                .td 
                    min-height 35px
            .td 
                display flex 
                align-items center 
                justify-content flex-end
                font-size 12px
                line-height 20px
                padding 5px 15px
                min-height 35px
                &:before 
                    content attr(data-label)
                    text-transform uppercase
                    color #6869AD
                    font-family $base-font-family 
                    font-size 12px
                    line-height 20px
                    font-weight 400
                    margin-right auto
                &[data-label = "24h Volume"]
                    width 100%
                &[data-label = "24h Change"]
                    &.green span:after
                        top 3px
                    &.red span:after
                        top 2px


@media (max-width : 600px)

    .page__markets
        .markets 
            .tbody 
                .tr 
                    width 100%
                    &:nth-child(even)
                        padding-left 0
                        &:before 
                            display none
                        .td 
                            padding-left 0
                .td 
                    padding 5px 0

@media (max-width : 480px)

    .page__markets 
        .header__main 
            padding 0 0 10px


        

