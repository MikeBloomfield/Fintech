@media (max-width : 1200px)

  .account 
    position relative
    min-height 100vh
    .accounts__top 
      .accounts__form
        width 100%
        margin-top 10px
    
    .sidebar
      position absolute 
      top 0
      left 0
      z-index 12
      overflow-y scroll
      min-height max-content
      height 100%
      box-shadow: 60px 60px 70px rgba(0, 0, 0, 0.5);
      padding-bottom 40px
      &.sidebar__close
        box-shadow none
        overflow-y visible
        .sidebar__btn
          right 0px
      &__btn 
        right 0px
      &::-webkit-scrollbar-track
        -webkit-box-shadow: none
        background-color: transparent;
      &::-webkit-scrollbar
        width: 0px;
        background-color: transparent;
      &::-webkit-scrollbar-thumb
        background-color: transparent;

    main 
      width calc(100% - 70px)
      margin-left auto

@media (max-width : 998px)
  .account
    .tickets
      .open, .closed
        margin: 0 auto
      .button.ui
        margin: 0 auto
    .account__table 
      thead   
        display none
      tbody 
        display flex
        justify-content space-between
        flex-wrap wrap 
        margin-bottom -10px
      tr 
        display flex 
        flex-direction column 
        width calc(50% - 10px)
        padding-bottom 10px
        padding-top 10px
        border-bottom none
        border-top 1px solid rgba(151,152,219,0.2)
        &:first-child,
        &:nth-child(2)
          border-top none
          padding-top 0
      td 
        display flex
        justify-content space-between
        align-items flex-start
        padding 5px 0 5px
        word-break: break-word;
        text-align right
        &:before 
          content attr(data-title)
          color $gray
          font-size 12px
          line-height 20px
          font-weight 400
          text-align left
          margin-right 5px
          width 40%
          min-width 100px
        .icon 
          margin-left auto
        &[data-title="To"]
          word-break break-all
    .toolbar
      flex-wrap wrap
      justify-content space-between
      &__dates
        width 100%
        max-width none
      &__select 
        flex-direction column
        align-items flex-start
        width calc(50% - 5px)
        margin-left 0
        margin-top 5px
        &-down,
        &-assets,
        &-status
          max-width none
      
    .transactions__top,
    .history__top 
      .section__title 
        width 100%
        margin-bottom 10px

    .funding-fiat__block
      flex-direction column
      .fiat__form 
        max-width none
      .fiat__details 
        margin-left 0
        margin-top 20px
   
    .sessions-history__table 
      td  
        &:before
          min-width 65px 
          width 15%

    .tickets__top-list
      width 100% 
      margin-left 0
      margin-top 10px
      justify-content flex-end
    
    .verification__field
      .three.fields>.field
        width 50%
      &-first
        .fields.three
          flex-wrap wrap
          &>.field
            width 100%
            padding-right 0
     
    

