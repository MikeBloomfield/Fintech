.page__fees
    overflow hidden
    .trading 
        &__description 
            margin-top: 11px;
            margin-bottom: 20px;
            p 
                font-size 15px
                line-height 20px
                span
                    color $blue 
        &__blocks 
            display flex
            justify-content space-between
            align-items center
            margin 0 auto 
            background $dark-blue
            border-radius: 10px;
            padding 29px 20px 30px 70px
            margin-top 35px
            box-shadow: 0px 10px 30px rgba(0, 0, 0, 0.15);
            &-title 
                max-width 180px 
                width 100% 
                margin-right 20px    
        &__block    
            text-align left 
            width 27%
            &-main 
                width 46%
            &-title 
                margin-bottom 10px
                p
                    color $gray
                    font-weight: 400;
                    font-size: 15px;
                    line-height: 25px;
            &-percent 
                font-weight: 700;
                font-size: 15px;
                line-height: 25px;
            
    .fiat 
        padding: 82px 0 50px
        &__blocks 
            margin-top 20px
        &__tr 
            display flex
            justify-content space-between
            align-items center 
            min-height 60px 
            background $dark-blue
            margin-bottom 10px
            padding 0px 30px
            border-radius 5px
            &-title 
                background transparent 
                min-height 47px 
                margin-bottom 0
                .fiat__td
                    font-size: 15px;
                    line-height: 35px;
                    color $gray
        &__td-title 
            max-width 270px 
            width 100%
            font-weight: 500;
            font-size: 15px;
            line-height: 25px;
            color $white
            span 
                margin-left 15px
                border-radius 5px 
                background $blue 
                font-size: 15px;
                line-height: 19px;
                color $white
                padding 3px 7px 2px

        &__tds 
            max-width 400px 
            width 100%
            display flex
            justify-content space-between
            padding 0 10px
            .fiat__td 
                &:first-child 
                    width 60% 
                &:last-child 
                    width 40% 
            &.light 
                .fiat__td 
                    color $gray
        &__td 
            text-align left
            font-size: 15px;
            line-height: 25px;
            color $white
            
          
          
    .crypto 
        padding: 38px 0 78px
        &__title 
            margin-bottom 11px
        &__description  
            margin-bottom 20px
            p 
                font-size: 15px;
                line-height: 25px;
                color $gray
                span
                    color $blue
                    padding-right 5px
            &.note
                margin-top -8px
                margin-bottom 30px
                p
                    font-size: 15px;
                    line-height: 25px;
                    color: #FF5154;
        &__blocks 
            display flex
            flex-wrap wrap 
            justify-content flex-start 
            margin 0 -15px

        &__block 
            background $dark-blue
            box-shadow: 0px 10px 30px rgba(0, 0, 0, 0.07);
            border-radius: 6px;
            padding: 18px 20px 16px
            max-width 270px 
            width calc(25% - 30px) 
            margin 0 15px 30px
            display flex
            flex-direction column 

            &-logo 
                min-height 35px 
            &-title 
                margin -5px auto 10px
                h3 
                    text-align center
                    font-weight: 500;
                    line-height: 30px;
                    color: #FFFFFF;

                span 
                    font-size 15px 
                    color $gray
            &-label 
                p 
                    font-size: 15px;
                    line-height: 25px;
                    color $gray
            &-item 
                display: flex;
                justify-content: space-between;
                align-items: center;
                margin-bottom: 10px;
                &:first-child 
                    margin-bottom: 15px;
                &:nth-child(3)
                    margin-top auto
            &-info p
                font-weight: 600;
                font-size: 15px;
                line-height: 25px;
                color $white

    @media (max-width : 1200px)
        .crypto
            &__block 
                margin 0 5px 10px 
                width calc(25% - 10px)
            &__blocks 
                margin 0 -10px 

            
    @media (max-width : 992px)

    
            
        .fiat 
            &__tr 
                flex-wrap wrap 
                padding 15px 20px 5px
                margin-bottom 10px
                &-title 
                    display none
            &__tds 
                flex-direction column
                width calc(50% - 10px)
                max-width none
                padding 0
                .fiat__td 
                    &:first-child,
                    &:last-child
                        width 100%
                &.no    
                    opacity 0 
                    pointer-event none
            &__td 
                margin-bottom 10px
                position relative
                display flex
                justify-content space-between
                &:before 
                    content attr(data-label)
                    font-size: 15px;
                    line-height: 25px;
                    color $gray 
                &-title 
                    max-width none
                    margin-bottom 10px 
                    font-size 18px 
                    line-height 25px
           

        
        .crypto
            &__block 
                width calc(33% - 10px)
                max-width none

    @media (max-width : 768px)

        .trading 
            &__blocks 
                flex-direction column
                align-items flex-start
                padding 20px 20px
            &__block
                width 100%
                margin-bottom 10px
                &-title 
                    margin-bottom 4px

        .fiat 
            padding 40px 0 30px
            &__tds 
                width 100% 
                position relative 
                &:nth-child(2)
                    padding-bottom 5px
                    margin-bottom 15px
                    &:after 
                        content ""
                        position absolute
                        width 95% 
                        height 1px 
                        background rgba($white, .1)
                        bottom 0 
                        left 50% 
                        transition all .4s ease
                        transform translateX(-50%)
                &.no 
                    display none     
        .crypto
            padding 30px 0
            &__block 
                width calc(50% - 10px)
                &-title 
                    margin-bottom 0
                    h3 
                        line-height 25px

    @media (max-width : 668px)

        .crypto
            .swiper-container
                padding-right 200px
                &:after 
                    width 200px

    @media (max-width : 480px)

        .crypto
            &__block 
                padding 15px 10px
                &-label 
                    p 
                        font-size 11px 
                &-info 
                    p 
                        font-size 13px
    @media (max-width : 370px)
        .crypto
            &__block 
                width 100%
        .crypto 
            &__block 
                padding 20px 15px 10px
                &-info p
                    font-size 13px
                    line-height 20px
                &-item 
                    &:first-child
                        margin-bottom 10px
        
        .fiat__td
            font-size 13px 
            &:before 
                font-size 13px

    

                    

                

