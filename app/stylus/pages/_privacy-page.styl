.page__privacy
    overflow hidden
    .privacy 
        .wrapper 
            max-width 1000px
        &__block 
            margin 30px 0
            background $dark-blue
            border-radius: 10px;
            padding 30px 50px 25px
            &-item 
                display flex
                justify-content flex-start 
                align-items flex-start 
                margin-bottom 5px
            &-name 
                font-weight: 500;
                font-size: 15px;
                line-height: 25px;
                color $gray 
                width 100%
                max-width 250px
                padding-right 10px
            &-info 
                font-weight: 600;
                font-size: 15px;
                line-height: 25px; 
                color $white
                max-width 610px
                width 100%
        &__text 
            margin-bottom 20px
        &__subtitle 
            margin 40px 0 30px
       

    @media (max-width : 798px)
        .privacy 
            &__block 
                padding 20px 30px 15px
                &-name 
                    max-width 170px
            &__text 
                margin-bottom 10px 
            &__subtitle 
                margin 20px 0 10px

    @media (max-width : 480px)
        .privacy 
            &__block 
                margin 15px 0 20px
                border-radius 20px
                padding 15px 20px 10px
                &-item 
                    flex-direction column 
                    margin-bottom 10px
        

    