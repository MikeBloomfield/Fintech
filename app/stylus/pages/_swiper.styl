.swiper-button
  &-next,
  &-prev 
    border 1px solid #06D49C
    border-radius 50% 
    width 50px 
    height 50px
    right 0
    left auto
    transition: $default-transition;
    &:after 
      display none
    &:hover 
      transform scale(.9)
  &-next
    top 57%
  &-prev 
    top 43%

.swiper-pagination 
  &-bullet 
    border: 1px solid $white;
    background transparent
    width 10px 
    height 10px
    opacity .5 
    &-active 
      opacity 1
      border: 2px solid $white;
      background $dark-blue2
