.page__terms
    overflow hidden
   
    .terms 
        .wrapper 
            max-width 1000px
        &__description 
            margin 39px 0 40px
        &__list 
                
            &-item 
                display flex
                justify-content flex-start
                align-items flex-start
                margin-top 30px
                &-num 
                    font-weight: 700;
                    font-size: 20px;
                    line-height: 30px;
                    color $blue
                    margin-right 10px
                &-text 
                    span 
                        color $white 
                        font-weight 700
                    ul 
                        margin-top 10px
                    li 
                        font-size 20px 
                        line-height 35px 
                        font-weight 500
                        color $white
                        position relative
                        padding-left 20px
                        margin-bottom 10px
                        &:before 
                            content ""
                            position absolute
                            top 13px 
                            left 0
                            width 12px 
                            height 12px 
                            border-radius 6px
                            background transparent
                            border 3px solid $blue

    @media (max-width : 798px)
        .terms 
            &__description 
                margin 10px 0 15px
            &__list 
                &-item 
                    margin-top 10px
                    &-num   
                        font-size 15px 
                        line-height 20px
                    &-text 
                        li 
                            font-size 15px 
                            line-height 25px
                            &:before 
                                top 7px
                                width 10px 
                                height 10px 
                               
    
