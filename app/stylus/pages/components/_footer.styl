.footer
	padding 42px 0
	position relative
	// background-color $green-2
	&__items 
		display flex
		justify-content space-between
		align-items flex-start 
		padding-bottom 14px
	&__item 
		width calc(25% - 10px)
		max-width 270px
		&-title 
			margin-bottom 14px
			position relative 
			&:after 
				position absolute 
				right 0
				background-image url('../img/icons/arrow-green.svg')
				width 8px 
				height 5px
				background-repeat no-repeat
				background-size cover
	&__list-item 
		margin-bottom 6px
	&__socials 
		display flex
		justify-content flex-start
		align-items center 
		flex-wrap wrap
	&__social 
		max-width 43px 
		width 100% 
		margin-right 13px
		a 
			display inline-block
			width 100%
			border-radius 55px
			position relative
			top 0
			&:hover 
				top -5px
				box-shadow: 0px 10px 30px rgba($green, 0.2);
		&:last-child 
			margin-right 0
	&__description
		border-top 1px solid rgba($gray, .15) 
		padding-top 20px
		p 
			font-weight: 500;
			font-size: 12px;
			line-height: 25px;
			color $green


@media (max-width : 992px)

	.footer
		&__item 
			width calc(25% - 5px)

@media (max-width : 768px)

	.footer
		padding 30px 0 
		&__items 
			flex-wrap wrap
		&__item 
			width calc(33.3% - 5px)
			margin-bottom 15px
			&:last-child 
				width 100%

@media (max-width : 480px)
	.footer 
		&__item 
			width 100%
			max-width none 
			&-title 
				margin-bottom 5px
				&:after 
					content ""
					top 10px 
					transition: $default-transition;
			&.active 
				.footer__list 
					display block
				.footer__item-title:after 
					transform rotate(-180deg)
			&:last-child 
				.footer__item-title:after 
					display none
		&__list 	
			display none
		&__description 
			text-align center
			

