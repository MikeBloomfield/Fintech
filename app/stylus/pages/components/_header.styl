.header
	// background $green
	&__top 
		display flex
		justify-content space-between
		align-items center
	&__logo 
		max-width 183px 
		width 100% 
		padding 12px 0
		a 
			display inline-block
	&__menu
		display flex
		justify-content space-between
		width 100%
	&__navigation 
		flex-grow 1
		width 100%
		margin-left 24px
	&__list 
		display flex
		justify-content flex-start
		align-items center 
		&-item 
			margin-left 51px
			a 
				display inline-block
				font-weight 500
				font-size 15px
				line-height 25px
				color rgba(#FFFFFF, .7)
				position relative
				padding-top: 23px;
				padding-bottom: 22px;
				&:before 
					content ""
					position absolute 
					top 0 
					left 50%
					transform translateX(-50%)
					width 0px
					height 4px 
					background $green
					box-shadow: -6px 5px 10px $green, 6px 5px 10px $green
					border-radius 2px
				&:hover 
					color $white
			&.active 
				a 
					color $white 
					&:before
						width 30px
	&__info 
		display flex
		align-items center
		justify-content flex-end
		width 100%
		max-width 280px
		margin-left 10px
	&__btn
		margin-left 22px
		&.transparent 
			a
				padding 7px 8px 8px
		&.border 
			max-width 120px 
			width 100%
			a
				padding 5px 8px 6px
	&__language-mob 
		display none
	&__menu-btn 
		max-width 30px 
		width 100%
		height 30px
		display flex
		justify-content center
		position relative
		display none
		z-index 40
		cursor pointer
		.line 
			width 100% 
			max-width 25px
			background $white 
			height 2px 
			position absolute 
			transform translateY(-50%)
			transition $default-transition;
			border-radius 6px
			&-1
				top calc(50% - 8px)
			&-2
				top 50%
			&-3
				top calc(50% + 8px)
		

@media (max-width : 992px)

	.header
		&__navigation 
			margin-left 0
		&__list-item 
			margin-left 30px

@media (max-width : 768px)

	.menu-active 
		overflow: hidden;
		position relative
		&:after 
			content ""
			position absolute 
			top 0 
			left 0
			width 100%
			height 100%
			background rgba($dark-blue-light, .95)
			z-index 2
		.header
			&__menu
				right 0
				&-btn
					position fixed 
					top 15px 
					right 15px
					.line 
						&-2 
							opacity 0
						&-1 
							top 50%
							transform translateY(-50%) rotate(-45deg)
						&-3 
							top 50%
							transform translateY(-50%) rotate(45deg)
			&__language-mob 
				margin-right 50px

	.header 
		&__menu 
			flex-direction column
			position fixed
			top 0
			right -100%
			height 100%
			width 60%
			max-width 600px
			padding 30px 0
			z-index 30
			justify-content center
			background #040652
			transition: all .7s ease
			&-btn 
				display block
		&__language 
			display none
		&__list-item a 
			padding-top 15px 
			padding-bottom 15px
		&__navigation 
			flex-grow 0
			margin-left 0
		&__info 
			margin 20px auto
			justify-content center
			margin-left auto
		&__btn 
			margin-left 0 
			margin 0 5px	
			max-width 120px 
			width 100%
		&__list 
			flex-direction column
			&-item 
				margin-left 0
				text-align center
		&__language-mob 
			display block
			margin-left auto 
			margin-right 20px


@media (max-height : 380px)
	.header__list-item 
		a 
			padding-top: 10px;
			padding-bottom: 5px;